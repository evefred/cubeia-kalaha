<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="kalaha" transaction-type="JTA">
		<jta-data-source>java:comp/env/jdbc/kalaha</jta-data-source>
		<class>net.kalaha.data.entities.User</class>
		<class>net.kalaha.data.entities.UserDetails</class>
		<class>net.kalaha.data.entities.Session</class>
		<class>net.kalaha.data.entities.Game</class>
		<class>net.kalaha.data.entities.GameStats</class>
		<class>net.kalaha.data.entities.GameState</class>
		<class>net.kalaha.data.entities.Invite</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.transaction.jta.platform" value="net.kalaha.data.util.FirebaseJpaPlatform" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>