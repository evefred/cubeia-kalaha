<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>Kalaha With Friends Root</display-name>

	<filter>
		<filter-name>fb-cauth</filter-name>
		<filter-class>net.kalaha.web.facebook.CanvasAuthFilter</filter-class>
	</filter>

	<filter>
		<filter-name>fb-oauth</filter-name>
		<filter-class>net.kalaha.web.facebook.OAuthFilter</filter-class>
	</filter>

	<filter>
		<filter-name>wicket.fb-web</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationFactoryClassName</param-name>
			<param-value>org.apache.wicket.guice.GuiceWebApplicationFactory</param-value>
		</init-param>
		<init-param>
			<param-name>module</param-name>
			<param-value>net.kalaha.web.SiteModule,net.kalaha.data.manager.ManagerModule</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>fb-cauth</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>fb-oauth</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>wicket.fb-web</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<resource-env-ref>
		<resource-env-ref-name>jdbc/kalahaDs</resource-env-ref-name>
		<resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
	</resource-env-ref>

</web-app>
