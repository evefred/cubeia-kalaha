<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

	<!-- A JPA Persistence Unit -->
	<persistence-unit name="kalaha" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source>java:comp/env/jdbc/kalahaDs</non-jta-data-source>
		<class>net.kalaha.user.api.User</class>
		<class>net.kalaha.user.api.Session</class>
		<properties>
           <property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
 	</persistence-unit>

</persistence>